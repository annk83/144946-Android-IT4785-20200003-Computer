<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#cccccc" />
            <gradient android:angle="-90" android:startColor="#cccccc" android:endColor="#cccccc"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#dddddd" />
            <solid android:color="#dddddd"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="10dip" android:color="#00000000" />
            <gradient android:angle="-90" android:startColor="#eeeeee" android:endColor="#dddddd" />
        </shape>
    </item>
</selector>